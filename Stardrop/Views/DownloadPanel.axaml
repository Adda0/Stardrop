<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:i="clr-namespace:Projektanker.Icons.Avalonia;assembly=Projektanker.Icons.Avalonia"
             xmlns:vm="using:Stardrop.ViewModels"             
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Stardrop.Views.DownloadPanel"
             x:DataType="vm:DownloadPanelViewModel">

    <UserControl.DataTemplates>
        <DataTemplate DataType="vm:ModDownloadViewModel">
            <Grid RowDefinitions="Auto, Auto, Auto" ColumnDefinitions="Auto, Auto, Auto">                
                <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Text="{Binding Name}"/>
                
                <ProgressBar Grid.Row="1" Grid.Column="0" Minimum="0" Maximum="1" Value="{Binding Completion}"/>
                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Completion, StringFormat='{}{0:0.##}'"/>                
                <Button Grid.Row="1" Grid.Column="2"/>
                
                <TextBlock Grid.Row="2" Grid.Column="0"/>
                <TextBlock Grid.Row="2" Grid.Column="1"/>
            </Grid>
        </DataTemplate>
    </UserControl.DataTemplates>

    <Grid>
        <ListBox Items="{Binding Downloads}">
            
        </ListBox>
    </Grid>
    
</UserControl>
